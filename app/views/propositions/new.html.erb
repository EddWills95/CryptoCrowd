<%= form_for @proposition, url: trader_propositions_path(@trader) do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>
  <fieldset>
    <%= f.label :order_type %>
    <%= f.select :order_type, options_for_select([['Buy','buy'],['Sell','sell']]) %>
  </fieldset>
  <fieldset>
    <%= f.label :currency1 %>
    <%= f.collection_select :currency_to_id, Currency.all, :id, :name %>

    <%= f.label :currency2 %>
    <%= f.collection_select :currency_from_id, Currency.all, :id, :name %>
  </fieldset>
  <fieldset>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </fieldset>
  <fieldset>
    <%= f.label :trade %>
    <%= f.select :trade, (1..30).inject([]) { |array, int| array << [int] } %>
  </fieldset>
  <fieldset>
    <%= f.label :expire %>
    <%= f.select :expire, (1..30).inject([]) { |array, int| array << [int] } %>
  </fieldset>
  <%= f.submit "Propose" %>
<% end %>