<div id="hidden-nav">
    <div id="nav-user-info">
      <% if trader_signed_in? || investor_signed_in? %>
        <h2><%= @trader.name || @investor.name %></h1>
        <h3><%= @trader.class.to_s || @investor.class.to_s %></h3>
      <% end %>
    </div>
  <div id="nav-inner">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="#">About</a></li>
      <% if trader_signed_in? %>
        <li><a href=<%= new_trader_proposition_path(current_trader.id) %>>Create Proposition</a></li>
        <li><a href=<%= edit_trader_registration_path %>>Edit Profile</a></li>
        <li><a href=<%= trader_wallet_index_path(current_trader.id) %>>Wallet</a></li>
        <li><%= link_to('Logout', destroy_trader_session_path, method: :delete) %></li>
      <% elsif investor_signed_in? %>
        <li><a href=<%= edit_investor_registration_path %>>Edit Profile</a></li>
        <li><a href=<%= investor_wallet_index_path(@investor) %>>Wallet</a></li>
        <li><%= link_to('Logout', destroy_investor_session_path, method: :delete) %> </li>
      <% else %>  
        <li><a href=<%= new_investor_session_path %>>Investor Login/SignUp</a></li>
        <li><a href=<%= new_trader_session_path %>>Trader Login/SignUp</a></li>
      <% end %>
    </ul>
  </div>
</div>